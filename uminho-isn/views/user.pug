extends mainLayout

block page
  .album.py-5.bg-light
    .row
      .col
        .container(style="padding-top: 10px;").text-center.bg-white
          img(src="http://placehold.it/200x200" alt="http://placehold.it/200x200")
          .container
            .container.user-text
              p= user.email
            .container(style='padding-top: 10px')
              a(href='/edit' role="button").btn.btn-primary Editar
      .col
        .container(style="padding-top: 10px;").text-center.bg-white
          h4 Subscrições atuais
          form(action='/subscription' method='POST')
              textarea.form-control(placeholder='Escreva o nome de uma tag...' name="text", rows='1')
              br
              button.btn.btn-primary(type='submit') Post
          table.table
            thead
              tr
                th(scope="col") Nome
                th(scope="col") Operação
            tbody
              each sub in user.subscriptions
                tr 
                  td= sub
                  td butão de apagar
    .row
      .container(style="margin-top: 50px").text-center.bg-white
        h4 Menções 
        table.table
          thead
            tr
              th(scope="col") Id
              th(scope="col") Titulo
              th(scope="col") Autor
              th(scope="col") Data
          tbody
            each mention in user.mentions
              tr
                td= mention._id
                td= mention.title
                td= mention.poster
                td= mention.date
