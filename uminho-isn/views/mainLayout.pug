extends layout

block content
	nav.navbar.navbar-expand-lg.navbar-light.fixed-top
		a.navbar-brand(href="/logout")
			i.fas.fa-power-off
		a.navbar-brand(href="/")
			i.fas.fa-home
			|  Home
		a.navbar-brand(href='/profile/' + user.name) 
			i.fas.fa-user
			|  #{user.name}
		a.navbar-brand(href='/publish') 
			i.fas.fa-pencil-alt
			|  Publicar
		.navbar-nav.ml-auto
			form.form-inline.my-2.my-lg-0
				.input-group.form-group
					form(action='/' method='GET')
						input.form-control.border.border-right-0(type='text' name='search' placeholder='Search...')
						span.input-group-append
							button.btn.btn-outline-light.border.border-left-0(type='submit')
								i.fa.fa-search
	block page
