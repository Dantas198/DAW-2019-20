extends authLayout

block content
	.authContainer
		.container
			.d-flex.justify-content-center.h-100
				.card
					.card-header
						h3 Sign In
					.card-body
						form(action="/register" method="POST" data-toggle="validator")
							.input-group.form-group
								.input-group-prepend
									span.input-group-text
										i.fas.fa-user
								input.form-control(type='email' placeholder='email' name='email' id='email' pattern="[^A-Z]+@[a-z]+[.][a-z]+" data-error="Bruh, that email address is invalid" required)
							.input-group.form-group
								.input-group-prepend
									span.input-group-text
										i.fas.fa-user
								input.form-control(type='text' placeholder='username' name='name' id='name' pattern=".+" data-error="Bruh, that email address is invalid" required)
							.input-group.form-group
								.input-group-prepend
									span.input-group-text
										i.fas.fa-key
								input.form-control(type='password' placeholder='password' name='password' id='password' required)
							.input-group.form-group
								.input-group-prepend
									span.input-group-text
										i.fas.fa-key
								input.form-control(type='password' placeholder='repeat password' id='repeatedPassword' data-match="#password" data-match-error="Whoops, these don't match" required)
							.form-group
								input.btn.float-right.login_btn(type='submit' value='Regist')
					.card-footer
						.d-flex.justify-content-center.links
